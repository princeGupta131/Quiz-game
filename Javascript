function all() {
  randomIndex = Math.floor(Math.random() * questions.length);
  displayQuestion(questions[randomIndex].question);
  a.innerText = questions[randomIndex].answers[0];
  b.innerText = questions[randomIndex].answers[1];
  c.innerText = questions[randomIndex].answers[2];
  d.innerText = questions[randomIndex].answers[3];
  
  a.addEventListener('click', () => {
    if (questions[randomIndex].answers[0] === questions[randomIndex].correctAnswer) {
      a.style.border = '4px solid green';
    } else {
      a.style.border = '4px solid red';
    }
  });
  
  b.addEventListener('click', () => {
    if (questions[randomIndex].answers[1] === questions[randomIndex].correctAnswer) {
      b.style.border = '4px solid green';
    } else {
      b.style.border = '4px solid red';
    }
  });
  
  c.addEventListener('click', () => {
    if (questions[randomIndex].answers[2] === questions[randomIndex].correctAnswer) {
      c.style.border = '4px solid green';
    } else {
      c.style.border = '4px solid red';
    }
  });
  
  d.addEventListener('click', () => {
    if (questions[randomIndex].answers[3] === questions[randomIndex].correctAnswer) {
      d.style.border = '4px solid green';
    } else {
      d.style.border = '4px solid red';
    }
  });
}

start.addEventListener('click', () => {
  all();
  start.innerText='next'
  start.style.backgroundColor='green'
  a.style.border = '1px solid #DD9C21'
  b.style.border = '1px solid #DD9C21'
  c.style.border = '1px solid #DD9C21'
  d.style.border = '1px solid #DD9C21'
});
